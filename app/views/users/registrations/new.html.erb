<div class="off-canvas">
  <div class="login-canvas">
    <div class="container">
      <div class="row">
        <div class="col col-md-8 offset-md-2 col-lg-6 offset-lg-3">
          <div class="border-box position-relative">
            <h4 class="borderBox-heading m-0 font-weight-bold">Sign Up</h4>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
              <div class="form-group">
                <label class="font-weight-bold form-label pl-md-3">Email address</label>
                <input type="email" class="form-control form-field">
              </div>
              <div class="form-group">
                <%= f.label :password, class: "font-weight-bold form-label pl-md-3" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" , class: "form-control form-field" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, class: "font-weight-bold form-label pl-md-3" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control form-field" %>
              </div>
              <div class="pl-3">
                <%= f.submit "Sign up", class: "btn btn-white" %>
              </div>
            <% end %>
          </div>
          <div class="px-5 mt-5 loginLinks-block">
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

