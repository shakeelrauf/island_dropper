<div class="off-canvas">
  <div class="login-canvas">
    <div class="container">
      <div class="row">
        <div class="col col-md-8 offset-md-2 col-lg-6 offset-lg-3">
          <div class="border-box position-relative">
            <h4 class="borderBox-heading m-0 font-weight-bold">Edit Account</h4>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <!--   <div class="form-group">
                <%#= f.label :email, class: "font-weight-bold form-label pl-md-3" %>
                <%#= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control form-field" %>
                 <%#= error_message_on(f.object, :email) %>
              </div> -->
              <div class="form-group">
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div class="font-weight-bold form-label">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>
              </div>
              <div class="form-group">
                <%= f.label :password , class: "font-weight-bold form-label pl-md-3" %> <i>(leave blank if you don't want to change it)</i>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-field" %>
                 <%= error_message_on(f.object, :password) %>
              </div>    
              <div class="form-group">
                <%= f.label :password_confirmation , class: "font-weight-bold form-label pl-md-3" %> 
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-field" %>

                 <%= error_message_on(f.object, :password_confirmation) %>
              </div>    
              <div class="form-group">
                <%= f.label :current_password , class: "font-weight-bold form-label pl-md-3" %>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-field" %>

                 <%= error_message_on(f.object, :current_password) %>
              </div>    
              
              <div class="pl-3">
                <%= f.submit "Update" ,class: "btn btn-white" %>
              </div>
            <% end %>
          </div>
          <div class="px-5 mt-5 loginLinks-block">
            <h3 class="mb-0">Cancel my account</h3>
            <p class="mb-0"><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "btn btn-green"%></p>

            <%= link_to "Back", :back, class: "login-links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>