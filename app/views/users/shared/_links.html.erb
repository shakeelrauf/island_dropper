<%- if controller_name != 'sessions' %>
  <p class="mb-0">
    Already have account? 
    <%= link_to "Log in", new_session_path(resource_name), class: "login-links" %>
  </p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="mb-0">
   <%= link_to "Sign up", new_registration_path(resource_name), class: "login-links" %>
 </p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="mb-0">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "login-links" %>
  </p>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="mb-0">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "login-links" %>
  </p>
<% end -%>



<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <p class="mb-0">
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) , class: "login-links"%>
    </p>
  <% end -%>
<% end -%>
