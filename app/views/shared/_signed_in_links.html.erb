<% if current_user && !(current_user.role == 'admin') %>
  <ul class="navbar-nav navbar-menu ml-auto">
    <li class="nav-item <%= current_page?(active_deliveries_url) ? 'active' : ''%>">
      <a class="nav-link" href="<%= active_deliveries_url %>">Active</a>
    </li>
    <li class="nav-item <%= current_page?(past_deliveries_url) ? 'active' : ''%>">
      <a class="nav-link" href="<%= past_deliveries_url %>">Past</a>
    </li>
    <li class="nav-item <%= current_page?(draft_deliveries_url) ? 'active' : ''%>">
      <a class="nav-link" href="<%= draft_deliveries_url %>">Draft</a>
    </li>
  </ul>
<% end %>
<div class="header-btns ml-auto d-flex justify-content-between flex-column flex-sm-row mt-3 mt-lg-0 position-relative">
  <% if current_user && (current_user.role == 'user') %>
  <%= link_to "New Delivery", deliveries_path,method: :post, class: "btn btn-white active text-uppercase" %>
  <% end %>
  <div class="dropdown dropdown-header p-0">
    <button class="btn btn-white ml-sm-3 mt-2 mt-sm-0 dropdown-toggle w-100-m" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= current_user.full_name.present? ? (current_user.first_name.capitalize).first(15) : '' %>
    </button>
    <div class="dropdown-menu dropdown-menu-header p-0" aria-labelledby="dropdownMenuButton">
      <ul>
        <li>
          <div class="dropdown-menu-block">
            <a class="dropdown-item" href="#">
              <%= current_user.email %>
            </a>
          </div>
        </li>
        <li>
          <div class="dropdown-menu-block">
            <%= link_to "Active Deliveries", active_deliveries_path, class: "dropdown-item" %>
          </div>
        </li>
        <li>
          <div class="dropdown-menu-block">
            <%= link_to "Edit Account", edit_user_registration_path,class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <li>
          <div class="dropdown-menu-block">
            <a class="dropdown-item" href="#">Help</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>