<div class="off-canvas">
  <div class="delivery-dropOff-canvas mt-4">
    <div class="container">
      <div class="delivery-dropOff">
        <div class="dropOff-heading d-flex align-items-center">
          <h4>Drop Off</h4>
          <a href="#" class="plus-link d-inline-block">
            <%= image_tag  "plus-icon.png", alt: "plus-IMG", width: "35" %>
          </a>
        </div>
        <div class="mt-4 mt-sm-5">
          <div class="card card-dropOff">
            <div class="card-header dropOff-heading d-flex align-items-center position-relative collapsed" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              <h4>
                Drop Off
                <span class="ml-3">1</span> 
              </h4>
            </div>
            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
              <div class="card-body py-0">
              <%= simple_form_for @delivery, url: wizard_path, class: "delivery-form dropOff-form" do |f| %> 
                  <div class="row">
                    <div class="col col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label pl-md-3">First Name</label>
                        <input type="text" class="form-control form-field-rounded">
                      </div>
                    </div>
                    <div class="col col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label pl-md-3">Last Name</label>
                        <input type="text" class="form-control form-field-rounded">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label pl-md-3">Address</label>
                        <input type="text" class="form-control form-field-rounded" placeholder="Enter drop off address">
                      </div>
                    </div>
                    <div class="col col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label pl-md-3">Phone Number</label>
                        <input type="number" class="form-control form-field-rounded" placeholder="+355 69 2656 8 244">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col col-12">
                      <div class="form-group">
                        <label class="form-label pl-md-3">Delivery Instructions</label>
                        <input type="text" class="form-control form-field-rounded">
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card card-dropOff">
            <div class="card-header dropOff-heading d-flex align-items-center position-relative" id="headingTwo" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
              <h4>
                Drop Off
                <span class="ml-3">2</span> 
              </h4>
            </div>
            <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordionExample">
              <div class="card-body py-0">
                <form class="delivery-form dropOff-form">
                  <div class="row">
                    <div class="col col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label pl-md-3">First Name</label>
                        <input type="text" class="form-control form-field-rounded">
                      </div>
                    </div>
                    <div class="col col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label pl-md-3">Last Name</label>
                        <input type="text" class="form-control form-field-rounded">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label pl-md-3">Address</label>
                        <input type="text" class="form-control form-field-rounded" placeholder="Enter drop off address">
                      </div>
                    </div>
                    <div class="col col-12 col-md-6">
                      <div class="form-group">
                        <label class="form-label pl-md-3">Phone Number</label>
                        <input type="number" class="form-control form-field-rounded" placeholder="+355 69 2656 8 244">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col col-12">
                      <div class="form-group">
                        <label class="form-label pl-md-3">Delivery Instructions</label>
                        <input type="text" class="form-control form-field-rounded">
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="item-detail pt-3">
        <div class="dropOff-heading d-flex align-items-center">
          <h4>Item Details</h4>
          <a href="#" class="plus-link d-inline-block">
            <%= image_tag  "plus-icon.png", alt: "plus-IMG", width: "35" %>
         </a>
        </div>
        <div class="mt-4 pt-sm-2">
          <div class="card card-item">
            <div class="card-header dropOff-heading d-flex align-items-center position-relative collapsed" id="headingThree" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
              <h4>
                Item
                <span class="ml-3">1</span> 
              </h4>
            </div>
            <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
              <div class="card-body pt-0 pb-4">
                <div class="row item-size-main align-items-center">
                  <div class="col col-12 col-md-4 col-lg-5">
                    <div class="dropOff-heading">
                      <h5 class="item-heading-m mb-4 mb-md-3 pb-md-3">Item size</h5>
                    </div>
                  </div>
                  <div class="col col-12 col-md-8 col-lg-7">
                    <div class="item-size-box d-flex justify-content-between">
                      <div class="item-size d-flex align-items-center justify-content-center mr-2 mr-sm-4 active">S</div>
                      <div class="item-size d-flex align-items-center justify-content-center mr-2 mr-sm-4">M</div>
                      <div class="item-size d-flex align-items-center justify-content-center mr-2 mr-sm-4">L</div>
                      <div class="item-size d-flex align-items-center justify-content-center mr-sm-4">F</div>
                    </div>
                    <div class="item-size-example">example: one large luggage</div>
                  </div>
                </div>
                <div class="row item-descrip align-items-center">
                  <div class="col col-12 col-md-4 col-lg-5">
                    <h5 class="deliveryItem-heading-m mb-4 mb-md-0">Item description</h5>
                  </div>
                  <div class="col col-12 col-md-8 col-lg-7">
                    <div class="form-group mb-0">
                      <input type="text" class="form-control form-field-rounded">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="card card-item">
            <div class="card-header dropOff-heading d-flex align-items-center position-relative" id="headingFour" data-toggle="collapse" data-target="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
              <h4>
                Item
                <span class="ml-3">2</span> 
              </h4>
            </div>
            <div id="collapseFour" class="collapse show" aria-labelledby="headingFour" data-parent="#accordionExample">
              <div class="card-body pt-0 pb-4">
                <div class="row item-size-main align-items-center">
                  <div class="col col-12 col-md-4 col-lg-5">
                    <div class="dropOff-heading">
                      <h5 class="item-heading-m mb-4 mb-md-3 pb-md-3">Item size</h5>
                    </div>
                  </div>
                  <div class="col col-12 col-md-8 col-lg-7">
                    <div class="item-size-box d-flex justify-content-between">
                      <div class="item-size d-flex align-items-center justify-content-center mr-2 mr-sm-4 active">S</div>
                      <div class="item-size d-flex align-items-center justify-content-center mr-2 mr-sm-4">M</div>
                      <div class="item-size d-flex align-items-center justify-content-center mr-2 mr-sm-4">L</div>
                      <div class="item-size d-flex align-items-center justify-content-center mr-sm-4">F</div>
                    </div>
                    <div class="item-size-example">example: one large luggage</div>
                  </div>
                </div>
                <div class="row item-descrip align-items-center">
                  <div class="col col-12 col-md-4 col-lg-5">
                    <h5 class="deliveryItem-heading-m mb-4 mb-md-0">Item description</h5>
                  </div>
                  <div class="col col-12 col-md-8 col-lg-7">
                    <div class="form-group mb-0">
                      <input type="text" class="form-control form-field-rounded">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="deliveryItem-btns pt-sm-4 d-flex align-items-start justify-content-between flex-column-reverse flex-sm-row">
        <%= link_to 'Back', previous_wizard_path, class: "btn btn-back btn-back-green text-uppercase" %>
        <div class="d-flex w-100-m">
          <button class="btn btn-white mr-1 mr-sm-3 mb-3 mb-sm-0 text-uppercase w-100-m" type="button">Save Draft</button>
          <button class="btn btn-next btn-next-green ml-1 ml-sm-0 mb-3 mb-sm-0 text-uppercase w-100-m" type="button">Next</button>
        </div>
      </div>
    </div>
  </div>
</div>